<p id="notice"><%= notice %></p>

 <div class="w3-container w3-center"><h1>Mendo's Bookstore</h1> 
 <h6><%= link_to "Show My Cart", cart_path(current_cart), :class => "w3-button w3-black"%></h6>
 
<table class="w3-table w3-bordered"> 
  <thead>
    <tr class="w3-red">
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %> 
      <tr>
        <td><%= strip_tags(product.title) %></td>
        <td><%= strip_tags(product.description) %></td>
        <td><%= image_tag(product.image_url) %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= button_to 'Add to Cart', line_items_path(product_id: product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


