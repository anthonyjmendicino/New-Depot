  <div class="w3-table-all"> 
	
	<div class="panel-body">
 <table class="table table-responsive">
    
    <% @cart.line_items.each do |item| %>
    <tr><td><%= item.quantity %> &times;</td>
    <td><%= item.product.title %></td>
    <td><%= number_to_currency(item.total_price) %></td>
    <td><%= image_tag(item.product.image_url)%></td>
	 </tr>
	  <% end %>
    <tr>
    <td></td><td>Total Order Value </td><td><%= number_to_currency(@cart.total_price) %></td><td></td>
    </tr>
    <tr><td></td><td><%= link_to 'Keep Shopping', store_index_url , class:"w3-button w3-red" %></td>
    <td><%= button_to 'Empty cart', @cart, class: "w3-button w3-red", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= button_to "Checkout", new_order_path, method: :get, class: "w3-button w3-red"%></td>
 </table>
</div>